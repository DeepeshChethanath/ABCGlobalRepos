@model ABCGlobal.Models.CandidateModel

@{
    ViewBag.Title = "AddCandidate";
}

<h2>AddCandidate</h2>
@using (Html.BeginForm("AddCandidate", "Candidate", FormMethod.Post))
{
    <script type="text/javascript">
    function Clearctrl(ctrl) {
        $("#txtfirstName").val("");
        $("#txtlastName").val("");
        $("#txtemail").val("");
        $("#txtphCode").val("");
        $("#txtmobile").val("");
        $("#txtcity").val("");
        $("#txtstate").val("");
        $("#txtcountry").val("");
        $("#txtpincode").val("");
        $("#txtprofilePic").val("");
        $("#txtworkExp").val("");
    }
    </script>


    <div class="container-fluid">
        <div class="row">
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                First Name :
                @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", @id = "txtfirstName" })
            </div>
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                Last Name :
                @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", @id = "txtlastName" })
            </div>
            <div class="form-group col-md-4 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                Email :
                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @id = "txtemail" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-1 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                Phone Code :
                @Html.TextBoxFor(m => m.phCode, new { @class = "form-control", @id = "txtphCode" })
            </div>
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                Mobile :
                @Html.TextBoxFor(m => m.mobile, new { @class = "form-control", @id = "txtmobile" })
            </div>
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                City :
                @Html.TextBoxFor(m => m.city, new { @class = "form-control", @id = "txtcity" })
            </div>
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                State :
                @Html.TextBoxFor(m => m.state, new { @class = "form-control", @id = "txtstate" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                Country :
                @*@Html.TextBoxFor(m => m.country, new { @class = "form-control", @id = "txtcountry" })*@
                @Html.DropDownListFor(x => x.country, Model.lstCountry.Select(m => new SelectListItem { Value = m, Text = m }))
            </div>
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                Pincode :
                @Html.TextBoxFor(m => m.pincode, new { @class = "form-control", @id = "txtpincode" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                Profile Picture :
                @Html.TextBoxFor(m => m.profilePic, new { @class = "form-control", @id = "txtprofilePic" })
            </div>
            <div class="form-group col-md-3 col-sm-12 col-xs-12" style="margin:1px;padding:1px;">
                Work Exp :
                @Html.TextBoxFor(m => m.workExp, new { @class = "form-control", @id = "txtworkExp" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-lg-3 col-sm-12" style="padding:1px;margin-top:15px;">
                <button id="btnSave" type="submit" class="btn btn-primary" name="btnStatus">Save</button>
                <button id="btnClear" type="submit" class="btn btn-info" name="btnClear" onclick="Clearctrl(this)">Clear</button>
                <a href="/Candidate/Candidate" class="btn btn-warning">Go Back</a>
            </div>
        </div>
    </div>
}

